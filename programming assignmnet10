1:l = [2, 4, 1, 5, 6, 7]

total = 0
for i in l:
    total += i
    
print(total)


2:l = [2, 4, 1, 5, 6, 7]

mul = 1
for i in l:
    mul *= i
    
print(mul)


3:l = [2, 0, 1, 1235, 6, -7123]

minimum = l[0]
for i in l:
    if i < minimum:
        minimum = i
        
print(minimum)

