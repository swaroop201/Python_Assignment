5:l = [2, 0, 1, 1235, 6, -7123]
l.sort(reverse=True)
print("Second largest number:", l[1])


6:def findLarge(lst, n):
    
    lst.sort(reverse = True)
    return lst[n-1]
# 2nd Largest Element

l = [2, 0, 1, 1235, 6, -7123]
findLarge(l, 2)


